{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start:app": "yarn workspace @gaui/covid19-app start",
    "build:app": "yarn workspace @gaui/covid19-app build",
    "start:api": "yarn workspace @gaui/covid19-api start",
    "build:api": "yarn workspace @gaui/covid19-api build",
    "build:chrome": "yarn workspace @gaui/covid19-chrome build",
    "test": "jest -i",
    "test:ci": "jest -i --coverage",
    "dts": "tsc --emitDeclarationOnly",
    "lint": "eslint --ext .ts packages __tests__ __mocks__ --ignore-path .gitignore",
    "format": "prettier \"./{packages,__tests__,__mocks__}/**/*.{js,jsx,ts,tsx,json,md}\" --write --ignore-path .gitignore",
    "typecheck": "tsc --noEmit --pretty --skipLibCheck",
    "vuln": "yarn audit --level high --no-progress --non-interactive --frozen-lockfile"
  },
  "dependencies": {
    "@babel/core": "^7.9.0",
    "@babel/polyfill": "^7.8.7",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-react": "^7.9.0",
    "@babel/preset-typescript": "^7.9.0",
    "isomorphic-unfetch": "^3.0.0",
    "ramda": "^0.27.0",
    "typescript": "^3.8.3",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11"
  },
  "devDependencies": {
    "@types/jest": "^25.1.4",
    "@types/node": "13.9.1",
    "@types/ramda": "0.26.44",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "core-js": "3.6.4",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "html-loader-jest": "^0.2.1",
    "jest": "^25.1.0",
    "microbundle": "^0.12.0-next.8",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "webpack-dev-server": "^3.10.3"
  }
}
